{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "SKIP_ENV_VALIDATION",
    "REGISTRY_TOKEN_SECRET",
    "POLAR_ACCESS_TOKEN",
    "POLAR_ORG_ID",
    "POLAR_PRODUCT_ID",
    "POLAR_IS_SANDBOX",
    "VERCEL_URL"
  ],
  "tasks": {
    "clean": {
      "cache": false,
      "persistent": false
    },
    "//#format": {},
    "//#lint": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "POLAR_ACCESS_TOKEN",
        "POLAR_ORG_ID",
        "POLAR_PRODUCT_ID",
        "POLAR_IS_SANDBOX",
        "SKIP_ENV_VALIDATION",
        "NEXT_PUBLIC_*"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "POLAR_ACCESS_TOKEN",
        "POLAR_ORG_ID",
        "POLAR_PRODUCT_ID",
        "POLAR_IS_SANDBOX",
        "SKIP_ENV_VALIDATION",
        "NEXT_PUBLIC_*"
      ]
    }
  }
}
