{
  "name": "domain-ui",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "turbo clean && git clean -xdf node_modules",
    "build": "turbo build",
    "dev": "turbo dev",
    "biome:lint": "npx @biomejs/biome lint --diagnostic-level=error",
    "biome:lint:write": "npx @biomejs/biome lint --write --diagnostic-level=error",
    "format": "npx ultracite@latest format",
    "lint": "npx ultracite@latest lint --diagnostic-level=error",
    "docs:dev": "turbo dev --filter=docs",
    "docs:build": "turbo build --filter=docs",
    "web:dev": "turbo dev --filter=web",
    "web:build": "pnpm replace-registry-urls && turbo build --filter=web",
    "web:start": "pnpm --filter web start",
    "domain:build": "pnpm --filter @workspace/domain-ui-registry registry:build",
    "domain-pro:build": "pnpm --filter @workspace/domain-ui-pro-registry registry:build",
    "registry:build": "pnpm domain:build && pnpm domain-pro:build",
    "replace-registry-urls": "if [ \"$VERCEL_URL\" ]; then sed -i '' 's|http://localhost:3000|https://'$VERCEL_URL'|g' packages/domain-ui-registry/registry.json apps/web/public/r/domain-ui/*.json apps/web/public/r/domain-ui-pro/*.json 2>/dev/null || true; fi",
    "update-common-packages": "pnpm update fumadocs-core fumadocs-mdx fumadocs-ui next tailwindcss tw-animate-css react react-dom lucide-react better-auth @tailwindcss/postcss @types/mdx postcss kysely @types/react @types/react-dom zod tailwind-merge --recursive --latest",
    "organize-imports": "organize-imports-cli packages/ui/src/**/*.{ts,tsx}"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@eslint/js": "^9.32.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "turbo": "^2.4.2",
    "typescript": "5.7.3",
    "ultracite": "5.1.2"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "core-js-pure",
      "esbuild",
      "msw",
      "sharp"
    ]
  }
}
