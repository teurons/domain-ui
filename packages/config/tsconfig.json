{
  "extends": "@workspace/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@workspace/ui/*": [
        "./src/*"
      ],
      "@workspace/ui/stripe/*": [
        "./src/stripe/*"
      ]
    },
    "types": [
      "next"
    ],
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    ".",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}